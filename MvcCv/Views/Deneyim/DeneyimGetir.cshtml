<form method="post">



    <label>ID = @Model.ID</label>

    <label>Başlık</label>

    <input type="text" value="@Model.Baslik" name="Baslik" class="form-control" placeholder="Baslik Yazınız" />

    <br />

    <label>Alt Başlık</label>

    <input type="text" value="@Model.AltBaslik" name="AltBaslik" class="form-control" placeholder="Alt Baslik Yazınız" />

    <br />

    <label>Tarih</label>

    <input type="date" name="Tarih" value="@Model.Tarih" class="form-control" placeholder="Çalışma Tarihniz" />

    <br />

    <label>Açıklama</label>

    <textarea name="Aciklama" value="@Model.Aciklama" class="form-control" placeholder="Açıklama Giriniz" rows="3">

        @Model.Aciklama

    </textarea>

    <br />

    <button class="btn btn-info">Güncelle</button>



</form>